<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.SciJava.Default" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="Widget.SciJava.Window" parent="CardView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>
    <style name="Widget.SciJava.Window.Control" parent="Widget.SciJava.Window">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="Widget.SciJava.Panel.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleLine">false</item>
        <item name="android:typeface">monospace</item>
        <item name="autoSizeTextType">uniform</item>
    </style>
</resources>